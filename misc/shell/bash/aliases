alias su="su -"
alias sudo="sudo -E"

# Colors colors colors
alias ls='ls --color=always'
alias less='less -r'
alias tree='tree -C'
alias grep="grep --color=auto"

alias skim="(head -5; tail -5) <"

alias screenalive="xset s off -dpms"
alias screensavepower="xset s on +dpms"
alias normaloutput="xrandr -s 1366x768"
alias vgaoutput="xrandr --output VGA1 --mode 1024x768"
alias hdmioutputfullhd="xrandr --output hdmi --mode 1920x1080"
alias hdmioutputrightof="xrandr --output HDMI1 --right-of LVDS1 --mode 1680x1050"
alias hdmioutputleftof="xrandr --output HDMI1 --right-of LVDS1 --mode 1680x1050"
alias hibernate="systemctl hibernate"
alias suspend="systemctl suspend"
alias lsdirs="ls -l | grep '^d'"

# Slow vim startup fix with many plugins
alias vim="vim -X"

# Sort files by Size
alias sortbysize="ls -s | sort -n"

# Say something with speech synthesis
alias say="espeak"

# Show where you copy
alias cp="cp -v"

# Make it no matter what
alias mkdir="mkdir -p"

# Colorize ls and * and / indicators on directories and .. ?
alias ls="ls --color=auto -F"
alias grep="grep --color=auto"

alias updatedb="sudo updatedb"

# webcam in mplayer, press G to take a shot.
alias webcam="mplayer tv:// -tv driver=v4l2:width=640:height=480:device=/dev/video0 -fps 15 -vf screenshot"

# android usb tethering
alias android-network-up="sudo ifconfig usb0 up && sudo dhcpcd usb0"

# first file screenshot - | tail -1
alias latest-file-screenshot='feh "$(ls -t | head -1)"'

alias ll='(echo "权限 链接 所有者 组 大小 日期 时间 名字"; ls -l | sed 1d) | column -t'
alias df='df -h|column -t'

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'

alias hd='od -Ax -tx1z -v'
alias realpath='readlink -f'
alias open='xdg-open'
alias psgrep='ps aux|grep'

alias copy='xsel -ib <'
alias paste='xsel -ob'

alias quickbrowse='curl -G -d text=plain'

alias ctags="ctags --c-kinds=+lpx --fields=+aS --extra=+q"

alias utf8="export LANG=en_US.UTF-8"
alias gbk="export LANG=zh_CN.GB18030"

alias wine32="WINEARCH=win32 wine"

alias tmux='tmux -2'

alias vimjs="vim --cmd 'let &rtp = substitute(&rtp, \"$HOME/.vim\", \"alternate\", \"g\")'"

alias mm="xmodmap ~/.xmodmap"
